<div class='page-header'>
  <h3>질문게시판</h3>
</div>

<table class='table table-striped'>
  <tr>
    <th>No</th>
    <th>Subject</th>
    <th>User</th>
    <th>Date</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td class='span1'><%= post.id %></td>
    <td><%= link_to post_title_with_reply_count(post), post_path(post) %></td>
    <td><%= email(post.user_id) %></td>
    <td><%= post.created_at %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '글쓰기', new_post_path, :class => 'btn btn-primary btn-mini' %>
