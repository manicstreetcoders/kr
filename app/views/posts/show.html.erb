<p id="notice"><%= notice %></p>

<table class='table'>
<tbody>
<tr>
  <td><h4>작성자: <%= email(@post.user_id) %></h4></td>
</tr>

<tr>
  <td><h3>제목: <%= @post.title %></h3></td>
</tr>

<tr>
  <td><%= @post.content %></td>
</tr>
</table>

댓글
<table class='table table-condensed'>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td> <%= comment.id %> </td>
        <td> <%= email(comment.user_id) %> </td>
        <td> <%= comment.body %> </td>
        <td>
          <% if current_user && comment.user_id == current_user.id %>
            <%= link_to 'X', '', :class => 'btn btn-mini' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <% if current_user %>
      <tr class='well form-inline'>
        <%= form_tag('/posts/add_new_comment', :method => :post) do %>
          <%= hidden_field_tag "id", @post.id %>
          <td></td>
          <td><%= email(current_user.id) %></td>
          <td class='span6'> 
            <%= text_area_tag 'comment', '', :class => 'span6', :rows => '4'%> 
          </td>
          <td>
            <%= submit_tag '댓글달기' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '목록', posts_path, :class => 'btn btn-mini' %>
<% if current_user && @post.user_id == current_user.id %>
  <%= link_to '수정', edit_post_path(@post), :class => 'btn btn-mini' %> 
  <%= link_to '지우기', post_path(@post), :method => :delete, :confirm => '지울까요?', :class => 'btn btn-mini btn-danger' %>
<% end %>
