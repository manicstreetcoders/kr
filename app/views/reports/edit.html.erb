<h2>리포트 수정</h2>

<%= form_for @report, :url => { :action => 'update' }, :html => { :multipart => true } do |f| %>

  <%= render 'error_messages' %>

  <br />

  <%= link_to '리포트 보기', @report.document.url, :class => 'btn btn-info' %>

  <br />
  <br />

  <div class="input-prepend">
    <span class="add-on"><i class="icon-file"></i></span>
    <%= f.file_field :document , :class => 'span4' %>
  </div>

  <br />

  <div class="input-prepend">
    <span class="add-on"><i class="icon-font"></i></span>
    <%= f.text_field :title, :class => 'span4', :placeholder => '리포트 제목' %>
  </div>

  <br />

  <button type="submit" class="btn btn-primary"><i class="icon-upload"></i> 리포트 수정</button>

<% end %>
