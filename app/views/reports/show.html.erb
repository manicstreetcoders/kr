<h2>리포트 보기</h2>

<%= render 'error_messages' %>

<br />

<table class='table'>
<thead>
<th class='span2'>
</th>
<th></th>
</thead>
<tbody>
<tr>
<td>리포트 ID:</td>
<td><%= @report.id %> </td>
</tr>

<tr>
<td>작성자 사진:</td>
<td><%= image_tag avatar_url(@report.user_id) %></td>
</tr>

<tr>
<td>작성자:</td>
<td><%= email(@report.user_id) %></td>
</tr>

<tr>
<td>제목:</td>
<td><%= @report.title %></td>
</tr>

<tr>
<td>포맷:</td>
<td><%= report_file_extension( @report ) %></td>
</tr>

<tr>
<td>태그:</td>
<td><%= render :partial => 'tag_list', :locals => { :report => @report } %></td>
</tr>

<tr>
<td>가격:</td>
<td>1,000 원</td>
</tr>
</tbody>
</table>

<%= link_to '리포트 구매', @report.document.url, :class => 'btn btn-success' %>
<%= link_to :back, :class => 'btn btn-primary' do %>
  &laquo; 뒤로
<% end %>

<br />
<br />

<%= render 'disqus' %>
