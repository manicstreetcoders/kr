<div class="hero-unit">
  <% if @reports.count == 0 %>
  <h2>Not found</h2>
  <br />
  <% else %>
    <h2>Search results</h2>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>ID</th>
          <th>제목</th>
          <th>View</th>
          <th>Sales</th>
          <th>Revenues</th>
          <th>올린 날짜</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |r| %>
          <tr>
            <td><%= r.id %></td>
            <td><%= link_to r.title, '#' %>
            <td>10</td>
            <td>5</td>
            <td>$100</td>
            <td><%= ago(r.created_at) %></td>
            <td>
              <%= link_to '다운로드', r.document.url, :class => 'btn btn-mini btn-info' %>
              <%= link_to '이메일', '#', :class => 'btn btn-mini' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to :back, :class => 'btn btn-primary' do %>
    &laquo; 뒤로
  <% end %>
</div> 
